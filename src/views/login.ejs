<%- include('includes/head') %> 
<%- include('includes/nav') %> 

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou logar</h1>
      <p class="text-center lead">Faça seu login ou Crie sua conta abaixo</p>

      <%- include('includes/msg') %> 

      <div class="row">
        
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Caso não tenha conta, preencha o formulário abaixo:</p>

          <form class="form-cadastro" action="/login/register" method="POST"> <!--Aqui que os dados POST serão guardados-->
            <input type="hidden" name="_csrf" value= <%= csrfToken %>>
            <div class="form-group">
              <label>Seu email</label>
              <input type="email" class="form-control input-email" name="email">
            </div>

            <div class="form-group my-2">
              <label>Sua senha</label>
              <input type="password" class="form-control input-senha" name="password">
            </div>

            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>
        </div>


        <div class="col-lg">
          <h4>Faça login</h4>
          <p>Caso tenha conta, faça login abaixo: </p>
          
          <form class="form-login" action="/login/login" method="POST"> <!--Aqui que os dados POST serão guardados-->
            <input type="hidden" name="_csrf" value= <%= csrfToken %>>
            <div class="form-group">
              <label>Seu email</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="form-group my-2">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>

      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
  
<%- include('includes/footer') %> 